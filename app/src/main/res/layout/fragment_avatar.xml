<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:clipToOutline="true"
        android:background="@drawable/ic_arrow_left"
        />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle_gray_fill" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:text="@string/new_avatar"
        android:textAppearance="@style/main_black"
        android:textSize="20dp"
        android:gravity="center_horizontal|center_vertical"
        />

    <Button
        android:id="@+id/save_avatar"
        android:layout_width="150dp"
        android:layout_height="49.68dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/rectangle_fill20"
        android:text="@string/save"
        />

</RelativeLayout>